
# 控制 .editorconfig 是否生效的字段
root = true
# 匹配全部文件
[*]
# 设置字符集
charset = utf-8
# 缩进风格
indent_style = space
# 缩进空格
indent_size = 2
# 结尾换行
end_of_line = auto
# 文件末尾换行符
insert_final_newline = true
# 删除代码前后空格
trim_trailing_whitespace = false

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false  

